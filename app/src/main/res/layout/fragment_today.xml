<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/backgroundToday"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivConstellation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baiyang"/>

        <TextView
            android:id="@+id/constellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="白羊座"
            android:textColor="#00EEEE"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="#00EEEE"
        android:textSize="20sp"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="综合运势:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="20dp" />

        <RatingBar
            android:id="@+id/rbSummary"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="爱情运势:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="50dp" />

        <RatingBar
            android:id="@+id/rbLove"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_marginStart="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="事业运势:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="20dp" />

        <RatingBar
            android:id="@+id/rbCareer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="财富运势:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="50dp" />

        <RatingBar
            android:id="@+id/rbMoney"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_marginStart="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="健康指数:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="20dp" />

        <RatingBar
            android:id="@+id/rbHealth"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="幸运数字:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#80CBC4"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="幸运颜色:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvColor"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#80CBC4"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="贵人星座:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/tvStar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#80CBC4"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />

    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="短评:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/tvPreSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#80CBC4"
            android:textSize="15sp"
            android:layout_marginStart="10dp" />
    </TableRow>

</LinearLayout>